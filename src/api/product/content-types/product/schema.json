{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "beforeDiscount": {
      "type": "decimal"
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 1
    },
    "productDetails": {
      "displayName": "ProductMeta",
      "type": "component",
      "repeatable": true,
      "component": "product.product-meta"
    },
    "additionalMeta": {
      "type": "component",
      "repeatable": true,
      "component": "product.product-meta"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "mappedBy": "products"
    },
    "media": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    }
  }
}
